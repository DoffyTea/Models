@model WebApplication2.Data.User

@{
    ViewData["Title"] = "Edit User";
}

<form method="post" asp-controller="Account" asp-action="Edits">
    <label asp-for="Email"></label>
    <input asp-for="Email" type="email" value="@Model.Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Login"></label>
    <input asp-for="Login" type="text" value="@Model.Login" />
    <span asp-validation-for="Login"></span>

    <label asp-for="Age"></label>
    <input asp-for="Age" type="number" value="@Model.Age" />
    <span asp-validation-for="Age"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" type="password" value="@Model.Password" />
    <span asp-validation-for="Password"></span>

    <input type="submit" value="Изменить" />

</form>